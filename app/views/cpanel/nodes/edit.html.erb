<section class="content-header">
  <h1>
    编辑节点：<%= @node.name %>
    <small>该节点下的话题总数为 <%= @node.topics.count %> 个。</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> 管理面板</a></li>
    <li>节点分类</li>
    <li class="active">编辑</li>
  </ol>
</section>

<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title"></h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <%= simple_form_for @node, url: cpanel_node_path, html: {role: 'form'} do |f| %>
        <div class="box-body">
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :node_category_id, collection: NodeCategory.all, label: '节点分类' %>
          </div>
          <div class="form-group">
            <%= f.input :name, class: 'form-control', label: '节点名称' %>
          </div>
          <div class="form-group">
            <%= f.input :slug, class: 'form-control' %>
          </div>
        </div>
        <div class="box-footer">
          <%= f.submit '更新', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</section>