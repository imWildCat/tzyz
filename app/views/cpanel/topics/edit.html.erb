<section class="content-header">
  <h1>
    编辑话题：<%= @topic.title %>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> 管理面板</a></li>
    <li>话题</li>
    <li class="active">编辑</li>
  </ol>
</section>

<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <h3 class="box-title"></h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <%= simple_form_for @topic, url: cpanel_topic_path, html: {role: 'form'} do |f| %>
        <div class="box-body">
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :title, class: 'form-control', label: '标题' %>
          </div>
          <div class="form-group">
            <%= f.input :status, collection: Topic.statuses.map { |k, v| [Topic::status_name_for(k), k] }, label: '状态' %>
          </div>
          <div class="form-group">
            <%= f.input :content, as: :text, class: 'form-control', label: '内容' %>
          </div>
        </div>
        <div class="box-footer">
          <%= f.submit '更新', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</section>