<% title '登录' %>
<h2>登录</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, label:'密码', required: true %>
      <%= f.input :remember_me, label:'记住我', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, '登录', class:'btn btn-primary float-right' %>
    </div>
<% end %>


<% content_for :sidebar do %>
    <%= render 'devise/shared/links' %>
<% end %>