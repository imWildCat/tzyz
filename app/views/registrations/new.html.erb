<div class="box">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
      <%= f.error_notification %>

      <%= f.input :nickname, label:'昵称', input_html: { placeholder: '昵称必须为2~8位汉字、英文、数字，但不能以数字开头' } %>
      <%= f.input :email, input_html: { placeholder: 'foo@bar.com' } %>
      <%= f.input :password, label:'密码', input_html: { placeholder: '至少6位'} %>

      <div class="form-actions">
        <%= f.submit '注册', class: 'btn btn-primary', 'data-disable-with' => '正在注册...' %>
      </div>
  <% end %>
</div>

<% content_for :sidebar do %>
    reg sidebar
<% end %>