<% title '创建新话题' %>
<div class="new-topic">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">创建新话题</h3>
    </div>
    <div class="panel-body">
      <%= form_for @node.topics.new, url: topic_index_path, html: {role: 'form', class: 'pen-form'} do |f| %>
          <div class="form-group">
            <div class="form-group">
              <%= f.hidden_field :node_slug, value: @node.slug %>
              <%= f.text_field :title, class: 'form-control', placeholder: '标题' %>
              <div class="pen-outlet">
                <div class="pen" data-toggle="pen" data-placeholder="请输入话题内容..."></div>
              </div>
              <input name="content" type="hidden" value=""/>
            </div>
            <%= f.submit '发表', class: 'btn btn-success float-right' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
