<% title '创建新话题' %>
<div class="new-topic">
  <div class="header">
    <%= link_to '校友会', root_path %>
    <span class="chevron"> › </span>
    <%= link_to @node.name, node_path(@node.slug) %>
    <span class="chevron"> › </span>
    创建新话题
  </div>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">创建新话题</h3>
    </div>
    <div class="panel-body">
      <%= form_for @node.topics.new, url: topic_index_path, html: {role: 'form'} do |f| %>
          <div class="form-group">
            <div class="form-group">
              <%= f.hidden_field :node_slug, value: @node.slug %>
              <%= f.text_field :title, class: 'form-control', placeholder: '标题' %>
              <br>
              <%= f.text_area :content, class: 'form-control', placeholder: '内容', rows: 10 %>
            </div>
            <%= f.submit '发表', class: 'btn btn-success float-right' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<% render 'shared/home_sidebar' %>