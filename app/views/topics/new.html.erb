<% title '创建新话题' %>
<div class="new-topic">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">创建新话题</h3>
    </div>
    <div class="panel-body">
      <%= form_for @topic, url: topic_index_path, html: {role: 'form', class: 'editor-form'} do |f| %>
          <div class="form-group">
            <div class="form-group row">
              <div class="col-xs-3" id="node-selector-container">
                <%= f.grouped_collection_select :node_id, NodeCategory.all, :nodes, :name, :id, :name, { prompt: '选择节点' }, class: 'form-control'%>
              </div>
              <div class="col-xs-9" id="topic-title-container">
                <%= f.text_field :title, class: 'form-control', placeholder: '标题', autofocus: true%>
              </div>
            </div>
            <div class="form-group">
              <textarea class="simditor form-control enable-at-user"></textarea>
              <input class="content" name="content" type="hidden" value=""/>
            </div>
            <%= f.submit '发表', class: 'btn btn-success float-right' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
